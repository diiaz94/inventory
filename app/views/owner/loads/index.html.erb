         <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">


              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Lista de cargas en depósitos</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="loads_table"  class="table table-condensed table-responsive table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>Comercio</th>
                        <th>Depósito</th>
                        <th>Producto</th>
                        <th>Cantidad Inicial</th>
                        <th>Cantidad Restante</th>
                        <th>Precio</th>
                        <th>Fecha</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @loads.each_with_index do |load,index| %>
                      <tr class="link" data-toggle="modal" data-target=<%="#modal-load-"+index.to_s%>>
                        <td><%= load.deposit.commerce.nombre%></td>
                        <td><%= load.deposit.nombre%></td>
                        <td><%= load.product.nombre_marca%></td>
                        <td><%= load.cantidad_inicial %></td>
                        <td><%= load.cantidad %></td>
                        <td class="monto"><%= load.precio %> Bs.</td>
                        <td><%= load.fecha_c %></td>
                      </tr>
                        <div class="example-modal">
                          <div class="modal fade" id=<%="modal-load-"+index.to_s%>>
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                  <h4 class="modal-title">Información</h4>
                                </div>
                                <div class="modal-body">
                                  <div class="row">
                                    <div class="col-xs-12">
                                      <div class="box box-solid">
                                        <div class="box-header with-border">
                                          <i class="fa fa-text-width"></i>
                                          <h3 class="box-title">Datos de la carga</h3>
                                        </div><!-- /.box-header -->
                                        <div class="box-body">
                                          <dl class="dl-horizontal">
                                            <dt>Comercio Asociado:</dt>
                                            <dd><%=load.deposit.commerce.nombre%></dd>
                                            <dt>Depósito Destino:</dt>
                                            <dd><%=load.deposit.nombre%></dd>
                                            <dt>Producto:</dt>
                                            <dd><%=load.product.nombre_marca%></dd>
                                            <dt>Cantidad Inicial:</dt>
                                            <dd><%=load.cantidad_inicial%></dd>
                                            <dt>Cantidad Restante:</dt>
                                            <dd><%=load.cantidad%></dd>
                                            <dt>Precio:</dt>
                                            <dd class="monto"><%=load.precio%> Bs.</dd>
                                            <dt>Fecha de creación:</dt>
                                            <dd><%=load.fecha_c%></dd>
                                            <dt>Última Actualización:</dt>
                                            <dd><%=load.fecha_u%></dd>
                              
                                          </dl>
                                       </div><!-- /.box-body -->
                                      </div><!-- /.box -->
                                    </div><!-- ./col -->
                                  </div><!-- /.row -->
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                                  
                                  <button data-url=<%=owner_loads_path%> data-id=<%=load.id%> type="button" class="btn btn-danger delete-record">Eliminar</button>
                                  <button type="button" class="btn btn-primary" aria-label="Left Align" onclick="window.location.href='<%=edit_owner_load_path(load)%>'">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar &nbsp;
                                  </button>
                                </div>
                              </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                          </div><!-- /.modal -->
                        </div><!-- /.example-modal -->
                      <% end %>

                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Comercio</th>
                        <th>Depósito</th>
                        <th>Producto</th>
                        <th>Cantidad Inicial</th>
                        <th>Cantidad Restante</th>
                        <th>Precio</th>
                        <th>Fecha</th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->


 <script>
      $(function () {
        $("#loads_table").DataTable({
          "language": {
            "url": "/plugins/datatables/dataTables.spanish.lang"
          },
          "order": [[ 6, "desc" ]],
          "columnDefs": [ {
          "targets": 'no-sort',
          "orderable": false,
          "searchable": false
          } ]
        });
      });
</script>
