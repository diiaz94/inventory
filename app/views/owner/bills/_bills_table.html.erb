<div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Lista de Ventas</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="<%=@identifier%>" class="display table table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th>Cantidad de productos</th>
                        <th>Total</th>
                        <th class="hidden">Abono</th>
                        <th>Fecha</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @bills.each_with_index do |bill,index| %>
                      <tr class="link" data-toggle="modal" data-target=<%="#modal-"+@identifier+"-"+index.to_s%>>
                        <td><%= bill.id %></td>
                        <td><%= bill.sales.sum(:cantidad).to_s %></td>
                        <td class="monto"><%= bill.total %></td>
                        <td class="monto hidden"><%= bill.pago %></td>
                        <td ><%= bill.fecha_c %></td>
                      </tr>
                        <div class="example-modal">
                          <div class="modal fade" id=<%="modal-"+@identifier+"-"+index.to_s%>>
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                  <h4 class="modal-title">Información</h4>
                                </div>
                                <div class="modal-body">
                                  <div class="row">
                                    <div class="col-xs-12">
                                      <div class="box box-solid">
                                        <div class="box-header with-border">
                                          <i class="fa fa-text-width"></i>
                                          <h3 class="box-title">Datos de la venta</h3>
                                        </div><!-- /.box-header -->
                                        <div class="box-body">
                                          <div class="panel panel-default">
                                            <!-- Default panel contents -->
                                            <div class="panel-heading">Detalle de la venta</div>
                                            <div class="panel-body">
                                            <!-- List group -->
                                              <ul class="list-group">
                                                <li class="list-group-item" style="rgb(245, 245, 245);font-weight: bold;">
                                                  <div class="row">
                                                    <div class="col-xs-4">
                                                      <span >Producto</span>
                                                    </div>
                                                    <div class="col-xs-4">
                                                      <span >Cantidad</span>
                                                    </div>
                                                    <div class="col-xs-4">
                                                      <span >Precio</span>
                                                    </div>
                                                  </div>
                                                </li>
                                                <% bill.sales.each do |sale| %>
                                                  <li class="list-group-item">
                                                    <div class="row">
                                                      <div class="col-xs-4">
                                                        <span><%=sale.product.nombre_marca%></span>
                                                      </div>
                                                      <div class="col-xs-4">
                                                        <span>x<%=sale.cantidad%></span>
                                                      </div>
                                                      <div class="col-xs-4">
                                                        <span class="monto"><%=sale.precio%></span>
                                                      </div>
                                                    </div>
                                                  </li>
                                                <%end%>
                                                <li class="list-group-item" style="background:rgba(12, 119, 171, 0.12);font-weight: bold;">
                                                  <div class="row">
                                                    <div class="col-xs-4"></div>
                                                    <div class="col-xs-4">
                                                      <span>Total</span>
                                                    </div>
                                                    <div class="col-xs-4">
                                                      <span class="monto"><%=bill.total%></span>
                                                    </div>
                                                  </div>
                                                </li>

                                              </ul>
                                            </div>

                                          </div>

                                       </div><!-- /.box-body -->
                                      </div><!-- /.box -->
                                    </div><!-- ./col -->
                                  </div><!-- /.row -->
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                                </div>
                              </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                          </div><!-- /.modal -->
                        </div><!-- /.example-modal -->
                      <% end %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Código</th>
                        <th>Cantidad de productos</th>
                        <th>Total</th>
                        <th class="hidden">Abono</th>
                        <th>Fecha</th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
<script>
      $(function () {
        $("<%='#'+@identifier%>").DataTable({
          "language": {
            "url": "/plugins/datatables/dataTables.spanish.lang"
          },
          "order": [[ 0, "desc" ]],
          "columnDefs": [ {
          "targets": 'no-sort',
          "orderable": false,
          "searchable": false
          } ]
        });
      });
</script>