<p> <%=notice%></p>
<p> <%=alert%></p>





       <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">


              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Lista de Usuarios</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="users_table" class="display table table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>Cedula</th>
                        <th colspan="1" class="no-sort"></th>
                        <th colspan="1" class="no-sort"></th>
                        <th colspan="1" class="no-sort"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= user.cedula %></td>
                          <td><%= link_to 'Mostrar', user %></td>
                          <td><%= link_to 'Editar', edit_user_path(user) %></td>
                          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Esta seguro/a?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Cedula</th>
                        <th colspan="1" class="no-sort"></th>
                        <th colspan="1" class="no-sort"></th>
                        <th colspan="1" class="no-sort"></th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->




 <script>
      $(function () {
        $("#users_table").DataTable({
          "language": {
            "url": "/plugins/datatables/dataTables.spanish.lang"
          },
          "columnDefs": [ {
          "targets": 'no-sort',
          "orderable": false,
          "searchable": false
          } ],
          stateSave: true
        });
      });
</script>

