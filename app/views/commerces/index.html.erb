<h1>Listing commerces</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commerces.each do |commerce| %>
      <tr>
        <td><%= commerce.nombre %></td>
        <td><%= commerce.descripcion %></td>
        <td><%= link_to 'Show', commerce %></td>
        <td><%= link_to 'Edit', edit_commerce_path(commerce) %></td>
        <td><%= link_to 'Destroy', commerce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Commerce', new_commerce_path %>
